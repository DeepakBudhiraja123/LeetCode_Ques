class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0){
            return false;
        }
        int res = 0;
        int temp = x;
        
        while(x!=0){
            if(res> INT_MAX/10 || res<INT_MIN/10){
                return false;
            }
            res = res*10 + x%10;
            x = x/10;
        }
        if(res==temp){
            return true;
        }
        return false;
    }
};
